  <script>
    if (document.getElementById("talwst__knight-diorama")) {
      var images = document.getElementById("talwst__knight-diorama").getElementsByTagName("img");
      var img;
      if (images && images.length > 0) {
        img = images[0];
        if (img && img.src) {
          var imgSrc = img.src;
          var loader = new window.Image();
          loader.src = '';
          loader.onload = function () {
            var imageComponent = document.getElementById("talwst__knight-diorama");
            imageComponent.classList.add("ImageComponent--loaded")
          }
          loader.src = imgSrc;
        }
      }
    } else {
      console.log("Warning: ImageComponent registered without img_key. Loading behavior will be broken.");
    }
  </script>
</div>
